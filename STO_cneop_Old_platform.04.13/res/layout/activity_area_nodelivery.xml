<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lly_nodeliver_lly1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_nodelivery"
            style="@style/CommonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_nodeliver_lly2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/bottom_nodeliver_btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CommonButton"
            android:layout_weight="1"
            android:text="@string/back" />
    </LinearLayout>
    
    <EditText
        android:id="@+id/et_nodelivery_area"
        style="@style/CommonEdit"
        android:singleLine="false"
        android:enabled="false"
        android:gravity="left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/lly_nodeliver_lly2"
        android:layout_below="@id/lly_nodeliver_lly1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />
</RelativeLayout>