<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

    <TextView
        android:id="@+id/textview1"
        style="@style/CommonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/barcodemessage" />

    <EditText
        android:id="@+id/et_barcode_track"
        style="@style/CommonEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1" />

    <LinearLayout
        android:id="@+id/lly_barcodetrack_llyBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp" >

        <include layout="@layout/bottom_button_style_2" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_barcode_message"
        style="@style/CommonEdit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/lly_barcodetrack_llyBottom"
        android:layout_below="@id/et_barcode_track"
        android:gravity="left"
        android:singleLine="false" />

</RelativeLayout>