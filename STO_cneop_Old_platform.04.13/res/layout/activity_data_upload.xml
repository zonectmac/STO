<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

      <LinearLayout
        android:id="@+id/lly_data_upload_llybottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp" >

        <include layout="@layout/bottom_button_style_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_data_upload_llyTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include layout="@layout/lv_data_upload_head" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_data_upload_lvList"
        style="@style/CommonList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lly_data_upload_llybottom"
        android:layout_below="@id/lly_data_upload_llyTop" >
    </ListView>

</RelativeLayout>