<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lly_fbdb_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <include layout="@layout/layout_route" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_fbdb_second"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_fbdb_head"
        android:orientation="horizontal" >

        <include layout="@layout/layout_barcode" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_fbdb_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <include layout="@layout/bottom_button_style_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_fbdb_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_fbdb_second"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <include layout="@layout/list_head_two" />
    </LinearLayout>

    <com.cneop.util.controls.ListViewEx
        android:id="@+id/lv_fbdb_scan_lvBarcodeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lly_fbdb_bottom"
        android:layout_below="@id/lly_fbdb_three" >
    </com.cneop.util.controls.ListViewEx>

</RelativeLayout>