<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lly_leave_waerhouse_lly1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <include layout="@layout/layout_barcode" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_leave_waerhouse_llyBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <include layout="@layout/bottom_button_style_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_leave_warehouse_llyListHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_leave_waerhouse_lly1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <include layout="@layout/list_head_one"/>
    </LinearLayout>

    <com.cneop.util.controls.ListViewEx
        android:id="@+id/lv_leave_warehouse_lvBarcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lly_leave_waerhouse_llyBottom"
        android:layout_below="@id/lly_leave_warehouse_llyListHead"
        android:layout_marginBottom="5dp" >
    </com.cneop.util.controls.ListViewEx>

</RelativeLayout>