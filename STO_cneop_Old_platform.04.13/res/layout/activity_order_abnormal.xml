<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@color/white"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_orderabnormal_tvOrderNum"
        style="@style/CommonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/order" />

    <EditText
        android:id="@+id/et_orderabnormal_etOrderNum"
        style="@style/CommonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/tv_orderabnormal_tvOrderNum"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_orderabnormal_tvAbnormalCode"
        style="@style/CommonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_orderabnormal_etOrderNum"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/reason" />

    <EditText
        android:id="@+id/et_orderabnormal_etAbnormalCode"
        style="@style/CommonEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_orderabnormal_etOrderNum"
        android:layout_below="@id/et_orderabnormal_etOrderNum"
        android:layout_marginTop="2dp" />

    <Button
        android:id="@+id/btn_orderabnormal_btnAbnormalCode"
        style="@style/CommonButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/et_orderabnormal_etAbnormalCode"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/et_orderabnormal_etAbnormalCode"
        android:text="@string/select" />

    <TextView
        android:id="@+id/tv_orderabnormal_tvDesc"
        style="@style/CommonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_orderabnormal_etAbnormalCode"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/des" />

    <EditText
        android:id="@+id/et_orderabnormal_etDesc"
        style="@style/CommonEdit"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@id/et_orderabnormal_etOrderNum"
        android:layout_alignRight="@id/et_orderabnormal_etOrderNum"
        android:layout_below="@id/et_orderabnormal_etAbnormalCode"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:gravity="top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <include layout="@layout/bottom_button_style_1" />
    </LinearLayout>

</RelativeLayout>