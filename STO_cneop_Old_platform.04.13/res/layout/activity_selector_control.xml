<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ViewStub
            android:id="@+id/vs_selectcontrol_statustype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_rdo_choose" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_selectorcontrol_lly1"
        android:orientation="horizontal" >

        <ViewStub
            android:id="@+id/vs_selectcontrol_routnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_prestation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_selectorcontrol_lly2"
        android:orientation="horizontal" >

        <ViewStub
            android:id="@+id/vs_selectcontrol_nextstation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_next_station" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_selectorcontrol_lly3"
        android:orientation="horizontal" >

        <ViewStub
            android:id="@+id/vs_selectcontrol_couriser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_barcode" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lly_selectorcontrol_lly4"
        android:orientation="horizontal" >

        <ViewStub
            android:id="@+id/vs_selectcontrol_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_rdotype_choose" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_selectorcontrol_lly6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <include layout="@layout/bottom_button_style_2" />
    </LinearLayout>

</RelativeLayout>