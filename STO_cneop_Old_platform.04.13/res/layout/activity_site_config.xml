<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    >
    <TextView 
        android:id="@+id/site_config_tvStationId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_stationId"
        style="@style/CommonText"
        />
    
    <EditText 
        android:id="@+id/site_config_etStationId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_config_tvStationId"        
        android:layout_marginTop="5dp"
        android:inputType="number"
        style="@style/CommonEdit"
        />
    
    <TextView
        android:id="@+id/site_config_tvTip"
        style="@style/CommonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_config_etStationId"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        
        android:text="@string/site_config_tip" />
    
    <LinearLayout 
        android:id="@+id/site_config_llyBottomBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/bottom_button_style_2"/>
    </LinearLayout>

</RelativeLayout>
