<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:layout_gravity="top"
    android:layout_margin="0dip"
    android:background="@color/title_back_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/toolbar_txttittle"
        style="@style/CommonText"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/title_back_color"
        android:gravity="top"
        android:text="@string/costittle"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/toolbar_tvUnupload"
        style="@style/CommonText"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/toolbar_txttittle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@color/title_back_color"
        android:gravity="center_vertical"
        android:text="@string/title_unupload"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <ImageView
        android:id="@+id/toolbar_imgvStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_tvUnupload"
        android:background="@color/title_back_color"
        android:gravity="top"
        android:src="@drawable/down_up_normal" />

    <TextView
        android:id="@+id/toolbar_tvUnuploadmsg"
        style="@style/CommonText"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/toolbar_txttittle"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/toolbar_imgvStatus"
        android:background="@color/title_back_color"
        android:gravity="top"
        android:text="@string/title_unuploadmsg"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

</RelativeLayout>