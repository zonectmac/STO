<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_carlotnumber_tvCarLotNumber"
        style="@style/CommonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/carlotnumber" />

    <EditText
        android:id="@+id/et_carlotnumber_etCarLotNumber"
        style="@style/CommonEdit"
        android:inputType="number"
        android:digits="0123456789ABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/et_carlotnumber_tvCarLotNumberCount"
        style="@style/CommonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

</LinearLayout>